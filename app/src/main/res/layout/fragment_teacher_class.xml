<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:text="Class Management"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:text="Class Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <!-- Class Details Card -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginBottom="12dp"
            android:radius="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardUseCompatPadding="true"
            android:elevation="4dp"
            android:padding="16dp">
        <LinearLayout
            android:id="@+id/classDetailsCard"
            android:orientation="vertical"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/classNameText" android:text="Class Name: " android:padding="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/classStreamText" android:text="Class Stream:" android:padding="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content" />
            <TextView android:id="@+id/gradeText" android:text="Grade: " android:padding="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/teacherNameText" android:text="Teacher: " android:padding="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView android:id="@+id/capacityText" android:text="Capacity: " android:padding="5dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Management Title -->
        <TextView
            android:id="@+id/manageTitle"
            android:text="Class Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Buttons Grid -->
        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="2dp"
            android:rowCount="2">

            <Button android:id="@+id/parentInformationBttn"  android:text="Get Parent Information" android:layout_gravity="center"/>
            <Button android:id="@+id/btnAddStudent" android:text="Add Student" android:layout_gravity="center"/>
            <Button android:id="@+id/btnUpdateExam" android:text="Update Exam Details" android:layout_gravity="center"/>
            <Button android:id="@+id/btnModifyStudent" android:text="Edit Student Details" android:layout_gravity="center"/>

        </GridLayout>
    </LinearLayout>
</ScrollView>
