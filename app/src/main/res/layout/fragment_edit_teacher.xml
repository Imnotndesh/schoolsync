<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_teacher_account"
            android:background="@drawable/bg_circle_white"
            android:padding="20dp"
            android:elevation="4dp" />

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/editTeacherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTeacherSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTeacherEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTeacherPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTeacherClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Class Name"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTeacherPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonUpdateTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/buttonDeleteTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Profile"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
