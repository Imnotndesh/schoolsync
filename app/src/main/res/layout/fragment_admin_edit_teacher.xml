<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/editTeacherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Title -->
        <TextView
            android:id="@+id/textEditTeacherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Teacher"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <!-- Search Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/inputSearchTeacherName"
                android:hint="Teacher Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"/>

            <Button
                android:id="@+id/btnSearchTeacher"
                android:text="Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- New Details Title -->
        <TextView
            android:id="@+id/textNewDetailsTitle"
            android:text="New Teacher Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingBottom="8dp"/>

        <!-- Hidden Input Fields -->
        <EditText
            android:id="@+id/editInputUsername"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editInputPassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editInputClassName"
            android:hint="Class Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editInputSubject"
            android:hint="Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editInputEmail"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editInputPhone"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSubmitEditTeacher"
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
