<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Page Title -->
        <TextView
            android:id="@+id/textEditStudentTitle"
            android:text="Edit Student"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Search Field -->
        <EditText
            android:id="@+id/inputSearchStudentName"
            android:hint="Enter Full student name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSearchStudent"
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- New Details Title -->
        <TextView
            android:id="@+id/textNewStudentDetailsTitle"
            android:text="New Student Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="12dp" />

        <!-- Date of Birth -->
        <EditText
            android:id="@+id/editInputDateOfBirth"
            android:hint="Date of Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Gender -->
        <EditText
            android:id="@+id/editInputGender"
            android:hint="Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Phone -->
        <EditText
            android:id="@+id/editInputPhone"
            android:hint="Phone (optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Class Name -->
        <EditText
            android:id="@+id/editInputClassName"
            android:hint="Class Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitEditStudent"
            android:text="Update Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
