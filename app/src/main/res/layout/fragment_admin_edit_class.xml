<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Page Title -->
        <TextView
            android:id="@+id/textEditClassTitle"
            android:text="Edit Class"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Search Field -->
        <EditText
            android:id="@+id/inputSearchClassName"
            android:hint="Enter class name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSearchClass"
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- New Details Title -->
        <TextView
            android:id="@+id/textNewClassDetailsTitle"
            android:text="New Class Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="12dp" />

        <!-- Class Stream -->
        <EditText
            android:id="@+id/editInputClassStream"
            android:hint="Class Stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <!-- Grade -->
        <EditText
            android:id="@+id/editInputGrade"
            android:hint="Grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <!-- Teacher Name -->
        <EditText
            android:id="@+id/editInputTeacherName"
            android:hint="Teacher Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp" />

        <!-- Capacity -->
        <EditText
            android:id="@+id/editInputCapacity"
            android:hint="Capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitEditClass"
            android:text="Update Class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
